generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transacoes {
  id             String             @id @default(uuid())
  nome           String
  tipo           TipoTransacao
  valor          Decimal?           @db.Decimal(10, 2)
  categoria      CategoriaTransacao
  status         StatusTransacao?   @default(PENDENTE)
  id_usuario     String
  data_pagamento DateTime?
  observacao     String?
  ano            String?
  mes            String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@map("transacoes")
}

model UsoApiRelatorios {
  id                  String   @id @default(uuid())
  id_usuario          String
  quantidade_chamadas Int      @default(0)
  ia_descricao        String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("uso_api_relatorios")
}

model RelatoriosMensais {
  id         String   @id @default(uuid())
  id_usuario String
  conteudo   String // Campo para armazenar textos longos
  ano        String
  mes        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("relatorios_mensais")
}

enum StatusTransacao {
  PAGO
  PENDENTE
  RECEBIDO
}

enum TipoTransacao {
  DEPOSITO
  DESPESA
  INVESTIMENTO
}

enum CategoriaTransacao {
  TRANSPORTE
  EDUCACAO
  SAUDE
  LAZER
  MORADIA
  ALIMENTACAO
  SALARIO
  FINANCIAMENTO
  FINANCEIRO
  FREELANCER
  FATURA_CARTAO_CREDITO
}
